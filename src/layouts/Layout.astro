---
import 'destyle.css';

import Header from '../components/layouts/Header.astro';
import Footer from '../components/layouts/Footer.astro';

const title = 'Mongolia Balloon Camp';
const description = 'オープンから20年 伝統あるキャンプ場で最高のモンゴル旅を';
---

<!doctype html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Noto+Sans+JP:wght@100..900&family=Oswald:wght@200..700&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <Header />
    <slot />
    <Footer />
  </body>
</html>

<style is:global>
  :root {
    --textPrimary: #333333;
    --textSecondary: #ffffff;
    --textTertiary: #d91621;

    --bgPrimary: #fff9eb;
    --bgSecondary: #ffffff;
    --bgTertiary: #4fabbf;

    --borderPrimary: #ffffff;
    --borderSecondary: #333333;

    --bgHeader: rgba(255, 249, 235, 0.5);

    --fontNoToSansJP: 'Noto Sans JP', serif;
    --fontOswald: 'Oswald', serif;
  }

  html {
    -webkit-text-size-adjust: 100%;
    -ms-text-size-adjust: 100%;
  }

  body {
    font-size: 1.125rem;
    font-weight: 400;
    font-family: var(--fontNoToSansJP);
    color: var(--textPrimary);
    background-color: var(--bgPrimary);
  }

  a {
    display: inline-block;
    text-decoration: none;
    color: inherit;
  }

  li,
  ol {
    list-style: none;
  }

  img {
    width: 100%;
    max-width: 100%;
    height: auto;
    vertical-align: bottom;
    font-style: italic;
    background-repeat: no-repeat;
    background-size: cover;
    shape-margin: 0.75rem;
  }

  .image {
  }

  button {
    touch-action: manipulation;
    -webkit-user-select: none;
    -moz-user-select: none;
    -ms-user-select: none;
  }
</style>
